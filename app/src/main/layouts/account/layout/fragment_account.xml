<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modules.account.AccountFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="120dp"
        android:contentDescription="Profil fotoğrafı"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/paddingVertical"
        android:paddingBottom="@dimen/paddingVertical"
        android:text="Kullanıcı adı"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_primary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_addresses"
            style="@style/WideButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_home"
            android:text="@string/my_addresses" />

        <Button
            android:id="@+id/button_favourite"
            style="@style/WideButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_favorite_border"
            android:text="@string/my_favourites" />

        <Button
            android:id="@+id/button_settings"
            style="@style/WideButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_settings"
            android:text="@string/settings" />


        <Button
            android:id="@+id/button_logout"
            style="@style/WideButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_logout"
            android:text="@string/logout" />
    </LinearLayout>


</LinearLayout>