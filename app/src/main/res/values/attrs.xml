<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GlobalAttrs">
        <attr name="text" format="string" localization="suggested" />
        <attr name="title" format="string" localization="suggested" />
        <attr name="subtitle" format="string" localization="suggested" />
        <attr name="button_icon" format="reference" />
        <attr name="imageSrc" format="reference" />
        <attr name="description" format="string" />
    </declare-styleable>


    <declare-styleable name="CarouselView">
        <attr name="title" />
        <attr name="see_more" format="boolean" />
        <attr name="type" format="enum">
            <enum name="promo" value="0" />
            <enum name="info" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CarouselPromoView">
        <attr name="title" />
        <attr name="subtitle" />
        <attr name="imageSrc" />
        <attr name="description" />
    </declare-styleable>

    <declare-styleable name="CarouselInfoView">
        <attr name="imageSrc" />
        <attr name="description" />
    </declare-styleable>

    <declare-styleable name="AddressSelectorView">
        <attr name="title" />
    </declare-styleable>

    <declare-styleable name="Header">
        <attr name="header_title" format="string" localization="suggested" />
        <attr name="icon" format="reference" />
        <attr name="button_icon" />
        <attr name="button_color" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="text" />
        <attr name="button_icon" />
    </declare-styleable>

    <declare-styleable name="CustomRecycler">
        <attr name="textview" format="reference" />
        <attr name="message" format="string" localization="suggested" />
    </declare-styleable>
</resources>