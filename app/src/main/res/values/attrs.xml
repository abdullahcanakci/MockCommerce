<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GlobalAttrs">
        <attr name="title" format="string" localization="suggested"/>
        <attr name="subtitle" format="string" localization="suggested"/>

        <attr name="imageSrc" format="reference" />
        <attr name="description" format="string"/>
    </declare-styleable>


    <declare-styleable name="CarouselView">
        <attr name="title"/>
        <attr name="see_more" format="boolean"/>
        <attr name="type" format="enum">
            <enum name="promo" value="0"/>
            <enum name="info" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CarouselPromoView">
        <attr name="title"/>
        <attr name="subtitle"/>
        <attr name="imageSrc" />
        <attr name="description" />
    </declare-styleable>

    <declare-styleable name="CarouselInfoView">
        <attr name="imageSrc" />
        <attr name="description" />
    </declare-styleable>


</resources>