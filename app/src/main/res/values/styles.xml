<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">@dimen/paddingHorizontal</item>
        <item name="android:paddingRight">@dimen/paddingHorizontal</item>
        <item name="android:paddingTop">@dimen/paddingVertical</item>
        <item name="android:paddingBottom">@dimen/paddingVertical</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="ButtonPrimarySmall" parent="ButtonPrimary">
        <item name="android:paddingLeft">@dimen/paddingHorizontal</item>
        <item name="android:paddingRight">@dimen/paddingHorizontal</item>
        <item name="android:paddingTop">@dimen/paddingVerticalSmall</item>
        <item name="android:paddingBottom">@dimen/paddingVerticalSmall</item>
        <item name="android:textSize">@dimen/text_secondary</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">@dimen/paddingHorizontal</item>
        <item name="android:paddingRight">@dimen/paddingHorizontal</item>
        <item name="android:paddingTop">@dimen/paddingVertical</item>
        <item name="android:paddingBottom">@dimen/paddingVertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:background">@android:color/background_light</item>
    </style>

    <style name="HeaderBar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/header_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/header_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/header_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/header_padding_vertical</item>
    </style>


    <dimen name="header_padding_horizontal">16dp</dimen>
    <dimen name="header_padding_vertical">8dp</dimen>
    <dimen name="paddingHorizontalSmall">8dp</dimen>
    <dimen name="paddingVerticalSmall">4dp</dimen>
</resources>
