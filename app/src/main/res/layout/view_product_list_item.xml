<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.mockcommerce.models.ProductModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/product_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:adjustViewBounds="true"
            android:paddingRight="16dp"
            android:src="@drawable/ic_product_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"

            android:paddingTop="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="@{model.name}"
            android:textColor="@color/text_main"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/product_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Product name" />

        <TextView
            android:id="@+id/product_discount"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/square"
            android:backgroundTint="@color/promotion_background_red"
            android:gravity="center_vertical"
            android:text="@{model.discount}"
            android:textAlignment="center"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:visibility="@{model.discountVisibility}"
            app:layout_constraintBottom_toTopOf="@id/add_to_cart"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="%50" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.oldPrice}"
            android:textColor="@color/text_faint"
            android:textSize="16sp"
            android:visibility="@{model.discountVisibility}"
            app:layout_constraintBottom_toTopOf="@id/product_price"
            app:layout_constraintLeft_toRightOf="@id/product_image"
            tools:text="100.15₺" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.price}"
            android:textColor="@color/text_main"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/add_to_cart"
            app:layout_constraintLeft_toRightOf="@id/product_image"
            tools:text="75.5₺" />

        <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/product_image"
            app:layout_constraintRight_toLeftOf="@id/add_to_cart"
            app:layout_constraintTop_toTopOf="@id/add_to_cart" />


        <Button
            android:id="@+id/add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryLight"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Sepete Ekle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>